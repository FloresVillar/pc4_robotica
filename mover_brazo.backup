import rclpy
from rclpy.node import Node
from sensor_msgs.msg import JointState
import math

class MoverBrazo(Node):
    def __init__(self):
        super().__init__('mover_brazo')
        self.joint_pub = self.create_publisher(JointState, '/joint_states', 10)

        # Nombres de las articulaciones
        self.joint_names = ['joint1', 'joint2']

        # Amplitudes máximas (radianes)
        self.amplitudes = [math.pi/4, math.pi/6]  # 45°, 30°

        # Velocidades (rad/s)
        self.speeds = [0.5, 0.3]  # más lento = más natural

        # Timer a 50 Hz para suavidad máxima
        self.timer_period = 0.02
        self.timer = self.create_timer(self.timer_period, self.mover)

        # Tiempo inicial
        self.start_time = self.get_clock().now().nanoseconds * 1e-9

    def mover(self):
        # Tiempo transcurrido
        t = self.get_clock().now().nanoseconds * 1e-9 - self.start_time

        # Cálculo de ángulos suavizados con seno
        angles = [
            self.amplitudes[0] * math.sin(self.speeds[0] * t),
            self.amplitudes[1] * math.sin(self.speeds[1] * t)
        ]

        # Crear mensaje JointState
        msg = JointState()
        msg.header.stamp = self.get_clock().now().to_msg()  # timestamp actualizado
        msg.name = self.joint_names
        msg.position = angles

        # Publicar
        self.joint_pub.publish(msg)

def main(args=None):
    rclpy.init(args=args)
    node = MoverBrazo()
    rclpy.spin(node)
    node.destroy_node()
    rclpy.shutdown()

if __name__ == '__main__':
    main()
